{
    "name": "velora",
    "type": "module",
    "private": true,
    "module": "index.ts",
    "scripts": {
        "lint:inspect": "oxlint --print-config && bunx @eslint/config-inspector build && bunx serve .eslint-config-inspector",
        "typecheck": "pnpm -r --filter='./apps/**/*' --filter='./layers/**/*' run typecheck",
        "oxlint": "oxlint --quiet --format=stylish",
        "oxlint:fix": "oxlint --quiet --fix --format=stylish",
        "oxlint:ts": "pnpm -r --filter='./apps/**/*' --filter='./layers/**/*' run oxlint:ts",
        "oxlint:ts:fix": "pnpm -r --filter='./apps/**/*' --filter='./layers/**/*' run oxlint:ts:fix",
        "eslint": "eslint --format=stylish",
        "eslint:d": "eslint --debug --format=stylish",
        "eslint:fix": "eslint --fix --format=stylish",
        "lint": "pnpm oxlint:ts && pnpm oxlint && pnpm eslint",
        "lint:d": "pnpm oxlint:ts && pnpm oxlint && pnpm eslint:d",
        "lint:fix": "pnpm oxlint:ts:fix && pnpm oxlint:fix && pnpm eslint:fix"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.0.0",
        "@eslint/config-inspector": "^1.3.0",
        "@nuxt/eslint": "^1.9.0",
        "@nuxt/kit": "^4.1.3",
        "@types/bun": "latest",
        "@unocss/nuxt": "^66.5.4",
        "eslint": "^9.37.0",
        "eslint-plugin-es-x": "^9.1.1",
        "eslint-plugin-format": "^1.0.2",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-oxlint": "^1.23.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-security-node": "^1.1.4",
        "oxlint": "^1.23.0",
        "oxlint-tsgolint": "^0.2.0",
        "sass": "^1.93.2",
        "unocss": "^66.5.4",
        "vue-tsc": "^3.1.1"
    }
}
