{
    "name": "velora",
    "type": "module",
    "private": true,
    "module": "index.ts",
    "workspaces": [
        "apps/*",
        "layers/*",
        "libs/*",
        "plugins/*"
    ],
    "scripts": {
        "lint:inspect": "bunx @eslint/config-inspector build && bunx serve .eslint-config-inspector",
        "typecheck": "bun run --filter='./apps/*' --filter='./layers/*' --filter='./libs/*' --filter='./plugins/*' typecheck",
        "eslint": "bun run --filter='./apps/*' --filter='./layers/*' --filter='./libs/*' --filter='./plugins/*' eslint",
        "eslint:d": "bun run --filter='./apps/*' --filter='./layers/*' --filter='./libs/*' --filter='./plugins/*' eslint:d",
        "eslint:fix": "bun run --filter='./apps/*' --filter='./layers/*' --filter='./libs/*' --filter='./plugins/*' eslint:fix",
        "lint": "bun eslint",
        "lint:d": "bun eslint:d",
        "lint:fix": "bun eslint:fix",
        "clean": "bun run --filter='./apps/*' --filter='./layers/*' --filter='./libs/*' --filter='./plugins/*' clean",
        "clean:all": "bun clean && find . -name 'node_modules' -type d -prune -exec rm -rf {} +"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@pinia/nuxt": "^0.11.2",
        "pinia": "^3.0.3"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.0.0",
        "@eslint/config-inspector": "^1.3.0",
        "@nuxt/eslint": "^1.9.0",
        "@nuxt/kit": "^4.1.3",
        "@types/bun": "latest",
        "@unocss/nuxt": "^66.5.4",
        "eslint": "^9.37.0",
        "eslint-plugin-es-x": "^9.1.1",
        "eslint-plugin-format": "^1.0.2",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-security-node": "^1.1.4",
        "sass": "^1.93.2",
        "unocss": "^66.5.4",
        "vue-tsc": "^3.1.1"
    }
}
