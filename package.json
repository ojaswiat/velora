{
    "name": "velora",
    "type": "module",
    "private": true,
    "module": "index.ts",
    "workspaces": [
        "apps/*",
        "layers/*",
        "libs/*",
        "plugins/*"
    ],
    "scripts": {
        "lint:inspect": "oxlint --print-config && bunx @eslint/config-inspector build && bunx serve .eslint-config-inspector",
        "typecheck": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run typecheck",
        "oxlint": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run oxlint",
        "oxlint:fix": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run oxlint:fix",
        "oxlint:ts": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run oxlint:ts",
        "oxlint:ts:fix": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run oxlint:ts:fix",
        "eslint": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run eslint",
        "eslint:d": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run eslint:d",
        "eslint:fix": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run eslint:fix",
        "lint": "bun oxlint:ts && bun oxlint && bun eslint",
        "lint:d": "bun oxlint:ts && bun oxlint && bun eslint:d",
        "lint:fix": "bun oxlint:ts:fix && bun oxlint:fix && bun eslint:fix",
        "clean": "bun -r --filter='./apps/**/*' --filter='./layers/**/*' --filter='./libs/**/*' --filter='./plugins/**/*' run clean",
        "clean:all": "bun clean && find . -name 'node_modules' -type d -prune -exec rm -rf {} +"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^6.0.0",
        "@eslint/config-inspector": "^1.3.0",
        "@nuxt/eslint": "^1.9.0",
        "@nuxt/kit": "^4.1.3",
        "@types/bun": "latest",
        "@unocss/nuxt": "^66.5.4",
        "eslint": "^9.37.0",
        "eslint-plugin-es-x": "^9.1.1",
        "eslint-plugin-format": "^1.0.2",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-oxlint": "^1.23.0",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-security": "^3.0.1",
        "eslint-plugin-security-node": "^1.1.4",
        "oxlint": "^1.23.0",
        "oxlint-tsgolint": "^0.2.0",
        "sass": "^1.93.2",
        "unocss": "^66.5.4",
        "vue-tsc": "^3.1.1"
    }
}
